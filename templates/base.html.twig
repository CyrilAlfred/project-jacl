<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('lib/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('lib/css/style.css') }}">
        {% endblock %}
    </head>
    <body style="background-color: rgb(163, 228, 215); color:white;">
        {% if is_granted('ROLE_ADMIN') %}
            <nav class="navbar navbar-dark navbar-expand-md bg-danger">
                <div class="container navbar-nav">
                    <a class="navbar-brand" href="">Admin</a>
                    <div class="navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="">Gestion des RDV</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endif %}
            <!--LEFT PART-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#"><img src="images/logo.png" height="30px"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Accueil<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Rendez-Vous</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">A Propos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('app_index_contact') }}>Contact</a>
                        </li>

                    </ul>
                </div>
                        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav">
                            {% if app.user is null%}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_security_register')}}">Inscription</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_security_login') }}">Connexion</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link">{{ app.user }}</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_security_logout') }}">DÃ©connexion</a>
                                </li>
                            {% endif %}
                                </ul>
                            </div>
                        </nav>


            </nav>

        <div class="container">
            {# affichage des messages flash #}
            {% for type, flashes in app.session.flashBag.all %}
                {% for message in flashes %}
                    {# pour la classe alert-danger du bootstrap #}
                    {% if type == 'error' %}
                        {% set type = 'danger' %}
                    {% endif %}
                    <div class=" mt-3 alert alert-{{ type }}">
                        {{ message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}

            {% endblock %}
        </div>



            {% block footer %}
                <div class="text-right container-fluid">
                    <p>Projet JACLD &copy</p>
                </div>
            {% endblock %}


            {% block javascripts %}
            <script src="{{ asset('lib/bootstrap.min.js') }}" ></script>
            {% endblock %}
        </body>

</html>
