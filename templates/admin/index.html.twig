{% extends 'base.html.twig' %}

{% block body %}


        <h1 class="text-center mb-5 mt-5">Gestion de mes RDV</h1>
    <div class="text-center">
        <form>
            <div class="form-group d-flex">
                <label >Date de début</label>
                <input type="text" class="form-control datepicker">
            </div>
            <div class="form-group d-flex">
                <label>date de fin</label>
                <input type="text" class="form-control datepicker">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

        <table class="table table-responsive table-striped ml-5">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Patient</th>
                <th scope="col">Id_RDV</th>
                <th scope="col" >Date</th>
                <th scope="col">Motif</th>
                <th scope="col">Profession</th>
                <th scope="col">Sportif</th>
                <th scope="col">Fumeur</th>
                <th scope="col">Antécédents</th>
                <th scope="col">Médicaments</th>
                <th scope="col">Allérgies</th>
                <th scope="col">Sommeil</th>
                <th scope="col">Statut</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>
            </thead>
            <tbody>

            {% for consultation in consultations %}
                {% if consultation.status == 'EN_ATTENTE' %}
                <tr>
                    <td>{{ consultation.user}}</td>
                    <td class="text-center" >{{ consultation.id }}</td>
                    <td>{{ consultation.date | date('d/m/Y H:m') }}</td>
                    <td>{{ consultation.motive }}</td>
                    <td>{{ consultation.job }}</td>
                    <td>{{ consultation.sports }}</td>
                    <td>{{ consultation.smoker }}</td>
                    <td>{{ consultation.medicalPast }}</td>
                    <td>{{ consultation.medication }}</td>
                    <td>{{ consultation.allergies }}</td>
                    <td>{{ consultation.sleepSchedule }}/10</td>
                    <td>{{ consultation.status }}</td>
                    <td><a class="btn btn-info" href="{{ path('app_admin_admin_update', {"id" : consultation.id}) }}">Modifier</a></td>
                    <td><a class="btn btn-info" href="{{ path('app_admin_admin_view', {"id" : consultation.id}) }}">Voir</a></td>
                    <td><a class="btn btn-info" href="{{ path('app_admin_admin_manage', {"id" : consultation.id}) }}">Séance</a></td>

                </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>



{% endblock %}