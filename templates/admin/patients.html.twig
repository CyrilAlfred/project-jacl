{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="mt-3">Gestion des patients</h1>


        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Id Patient</th>
                <th scope="col">Nom</th>
                <th scope="col" >Prénom</th>
                <th scope="col">Sexe</th>
                <th scope="col">Age</th>
                <th scope="col">Téléphone</th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>
            </thead>
            <tbody>

            {% for user in users %}
                <tr>

                    <td>{{ user.id}}</td>
                    <td>{{ user.lastname | capitalize}}</td>
                    <td>{{ user.firstname | capitalize}}</td>
                    <td>{{ user.sexe | capitalize}}</td>
                    <td>{{ user.age}} ans</td>
                    <td>{{ user.telephone}}</td>
                    <td></td>
                    <td></td>


                </tr>

            {% endfor %}
            </tbody>
        </table>
    </div>




{% endblock %}