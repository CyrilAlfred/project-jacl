{% extends 'base.html.twig' %}

{% block body %}

    <div class=" mt-3 d-flex justify-content-center">
        <div class="card shadow" style="width: 18rem; ">
            <div class="card-header text-black-50 font-weight-bold text-center">
                Information patient
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-black-50">{{ user.lastname }}</li>
                <li class="list-group-item text-black-50">{{ user.firstname}}</li>
                <li class="list-group-item text-black-50">{{ user.age }} ans</li>
                <li class="list-group-item text-black-50">{{ user.email }}</li>
                <li class="list-group-item text-black-50">{{ user.sexe}}</li>
                <li class="list-group-item text-black-50">{{ user.telephone}}</li>
                <li class="list-group-item text-black-50">{{ user.adress}}</li>
                <li class="list-group-item text-black-50">{{ user.city}}</li>
                <li class="list-group-item text-black-50">{{ user.zipcode}}</li>
            </ul>
        </div><!--FIN CARD-->
    </div> <!--FIN CONTENT CENTER-->
    <div class="mt-1 d-flex justify-content-center" >
        <a class="btn btn-info text-white" href="{{ path('app_admin_admin_index')}}" style="width: 18rem;">Retour</a>
    </div>




{% endblock %}