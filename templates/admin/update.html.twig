{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3 mb-3">
        <h1>Modification RDV pour <strong>{{ booking.user }}</strong></h1>
        <hr>
    </div>


<div class="container d-block d-md-flex justify-content-center col-12">

    <div class="col-12 col-md-6 mb-5">
        {{ form_start(form) }}


        {{ form_row(form.date) }}
        {{ form_row(form.motive) }}
        {{ form_row(form.job) }}
        {{ form_row(form.sports) }}
        {{ form_row(form.medical_past) }}
        {{ form_row(form.smoker) }}
        {{ form_row(form.medication) }}
        {{ form_row(form.allergies) }}
        {{ form_row(form.sleep_schedule) }}


        <div class="text-right">
            <button type="submit" class="btn btn-info">Modifier</button>
            {{ form_end(form) }}
            <button type="reset" class="btn btn-info"><a class="card-link" href="{{ path('app_admin_admin_index')}}"
                       style="text-decoration: none; color:white;
">Retour</a>
            </button>
        </div>

    </div><!-- .col-md-6 Fin formulaire -->

    <div class="col-12 col-md-6 mt-3 mt-md-5 d-block justify-content-center d-md-flex h-50">

            <div class="card shadow mb-4 mr-4 ml-4 ml-md-0" style="width: 18rem; ">
                <div class="card-header text-black-50 font-weight-bold text-center">
                    <h3>Profil de {{ booking.user }}</h3>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-black-50"><strong>Nom </strong> : {{ booking.user.lastname | capitalize }}</li>
                    <li class="list-group-item text-black-50"><strong>Prénom </strong> : {{ booking.user.firstname | capitalize
                        }}</li>
                    <li class="list-group-item text-black-50"><strong>Age </strong> : {{ booking.user.age }} ans</li>
                    <li class="list-group-item text-black-50"><strong>Email </strong> : {{ booking.user.email | capitalize}}</li>
                    <li class="list-group-item text-black-50"><strong>Adresse </strong> : {{ booking.user.adress | capitalize}}</li>
                    <li class="list-group-item text-black-50"><strong>Ville </strong> : {{ booking.user.city | capitalize}}</li>
                    <li class="list-group-item text-black-50"><strong>Code postal </strong> : {{ booking.user
                        .zipcode}}</li>
                    <li class="list-group-item text-black-50"><strong>Téléphone </strong> : {{ booking.user.telephone}}</li>
                </ul>
            </div><!--FIN CARD 1-->
            <div class="card shadow mb-4 ">
                <div class="card-header text-black-50 font-weight-bold text-center">
                    <h3>Séance du  {{ booking.date | date('d/m/Y H:i') }}</h3>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-black-50"><strong>Motif  </strong> : {{ booking.motive | capitalize}}</li>
                    <li class="list-group-item text-black-50"><strong>Profession</strong> : {{ booking.job | capitalize}}</li>
                    <li class="list-group-item text-black-50"><strong>Fumeur </strong> : {{ booking.smoker | capitalize}}
                    </li>
                    <li class="list-group-item text-black-50"><strong>Antécédents</strong> : {{ booking.medicalPast | capitalize
                        }}</li>
                    <li class="list-group-item text-black-50"><strong>Pratique sportive </strong> : {{ booking
                        .sports | capitalize}}</li>
                    <li class="list-group-item text-black-50"><strong>Prise quotidienne de médicaments</strong> :
                        {{
                        booking.medication | capitalize}}</li>
                    <li class="list-group-item text-black-50"><strong>Allergies  </strong> : {{ booking.allergies | capitalize
                        }}</li>
                    <li class="list-group-item text-black-50"><strong>Qualité de sommeil</strong> : {{ booking.sleepSchedule
                        }}/10</li>
                </ul>
            </div><!--FIN CARD 2-->


    </div>
</div><!-- .container Full page-->









{% endblock %}