{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

    <h1>Connexion</h1>
        <p class="text-center">Veuillez vous inscrire ou vous connecter pour prendre un rdv</p>
        <form method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" name="_username" class="form-control" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label>Mot de passe</label>
                <input type="password" name="_password" class="form-control">
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-info">Se connecter</button>
                <button type="submit" class="btn btn-info btn-link"><a href="{{ path('app_security_register') }}">S'inscrire</a></button>

            </div>

        </form>
</div><!--FIN CONTAINER-->

{% endblock %}